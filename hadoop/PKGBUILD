set -u
pkgname='hadoop'
pkgver='3.2.0'
pkgrel='1'
pkgdesc='Hadoop - MapReduce implementation and distributed filesystem'
arch=('i686' 'x86_64')
url='http://hadoop.apache.org'
license=('apache')
depends=('java-environment>=7' 'openssh' 'apache-ant' 'polkit')

# Maintainer: heavysink <winstonwu91 at gmail>

_mirrorlist_name=arch4edu-mirrorlist
pkgname=$_mirrorlist_name-git
pkgver=20210519
pkgver() {
  date +'%Y%m%d'
}
pkgrel=1
pkgdesc="Arch Linux CN repo mirror list for use by pacman"
arch=('any')
url="https://github.com/arch4edu/arch4edu"
license=('GPL')
makedepends=('git')
backup=(etc/pacman.d/$_mirrorlist_name)
source=(git+https://github.com/arch4edu/mirrorlist.git)
md5sums=('SKIP')

_gitname=mirrorlist

package() {
  cd "$srcdir/$_gitname"
  mkdir -p "$pkgdir/etc/pacman.d/"
  cp "mirrorlist.arch4edu" "$pkgdir/etc/pacman.d/$_mirrorlist_name"
}
